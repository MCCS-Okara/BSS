<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Charges-Blooms School System</title>

    <!-- Tailwind CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Choices.js CSS for multi-select dropdown -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
    <link rel="stylesheet" href="/alert.css">
    <link rel="stylesheet" href="/output.css">
    <!-- Custom styles for Choices.js -->
    <style>
    
        .choices__inner {
            background-color: #f9fafb; /* Light background */
            border-color: #d1d5db; /* Light border color */
            border-radius: 0.375rem; /* Rounded corners */
            padding: 0.25rem 0.5rem; /* Reduced inner padding for compact height */
        }
        .choices__list--multiple .choices__item {
            background-color: #3b82f6; /* Tailwind blue */
            color: #ffffff; /* White text for selected items */
            border-radius: 0.25rem; /* Rounded corners for tags */
            margin: 0.25rem; /* Space between tags */
            padding: 0.25rem 0.5rem; /* Padding for tags */
        }
        .choices__list--dropdown .choices__item--selectable:hover {
            background-color: #e5e7eb; /* Hover effect on options */
        }
        
    </style>
</head>
<body class="bg-gray-100 min-h-screen ">

    <!-- Header Section -->
    <header class="bg-blue-700 text-shadow text-white  py-2 shadow-md">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold uppercase">Add Additional Expances</h1>
        </div>
    </header>
    
       <!-- Include Navigation Bar -->
       <%- include('partials/navbar.ejs') %> 
       
<!-- Error Message Display -->
<div id="error-message" class="error-message text-center hidden"></div>

 <!-- Custom Alert Modal -->
 <div id="customAlert" class="custom-alert hidden">
    <div class="custom-alert-content">
        <p id="alertMessage"></p>
        <button onclick="closeAlert()">OK</button>
    </div>
</div>

    <!-- Main Content Section -->
    <div class="container bg-gradient-to-r from-green-300 to-blue-500 min-h-screen min-w-full flex items-center justify-center">
        <!-- Filters Section -->
        <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-lg mx-auto">
            <!-- Registration Number Input -->
            <div class="my-4">
                <label for="registrationNo" class="block text-sm font-medium text-gray-700">Registration No</label>
                <input type="text" id="registrationNo" autocomplete="off" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500" placeholder="Enter Registration No">
            </div>
    
            <!-- Class Multi-Select Dropdown -->
            <div class="my-4">
                <label for="class" class="block text-sm font-medium text-gray-700 mb-2">Select Classes</label>
                <select id="class" name="class[]" multiple class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 p-2 text-sm">
                    <option value="Nursery">Nursery</option>
                    <option value="Prep">Prep</option>
                    <option value="Playgroup">PlayGroup</option>
                    <option value="1">Class 1</option>
                    <option value="2">Class 2</option>
                    <option value="3">Class 3</option>
                    <option value="4">Class 4</option>
                    <option value="5">Class 5</option>
                    <option value="6">Class 6</option>
                    <option value="7">Class 7</option>
                    <option value="8">Class 8</option>
                    <option value="9">Class 9</option>
                    <option value="Matric">Class 10</option>
                </select>
            </div>
    
            <!-- Other Inputs -->
                 <!-- Dynamic Charges Section -->
                 <div class="my-4" id="additionalFieldsContainer">
                    <label class="block text-sm font-medium text-gray-700">Additional Charges</label>
                    <button id="addChargeField" class="bg-green-500 text-white px-4 py-2 rounded-md shadow-sm hover:bg-green-600 mt-2">Add Field</button>
                </div>
    
                <!-- Add Charges Button -->
                <div class="text-center mt-6">
                    <button id="submitCharges" class="bg-gradient-to-r from-blue-500 to-blue-600 text-white font-semibold rounded-lg hover:from-blue-600 hover:to-blue-700 py-2 px-4">Submit Charges</button>
                </div>
            </div>
        </div>
</body>
<!-- Choices.js JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

<!-- Initialize Choices.js -->
<script src="./script/additionalExpances.js"></script>
  <!-- navbar script-->
<script src="./script/navbar.js"></script>
</html>
