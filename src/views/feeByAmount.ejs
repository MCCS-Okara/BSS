<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Records - Blooms School System</title>
    <link rel="stylesheet" href="/alert.css">
    <link rel="stylesheet" href="/output.css">
</head>
<body class="bg-gradient-to-b from-gray-50 to-gray-400 min-h-screen text-gray-800">

    <!-- Header -->
    <header class="bg-blue-700 text-white py-4 shadow-md">
        <div class="container mx-auto text-center">
            <h1 class="text-4xl font-bold uppercase tracking-wide">Student Records</h1>
        </div>
    </header>

<!-- Custom Alert Modal -->
<div id="customAlert" class="custom-alert hidden">
    <div class="custom-alert-content">
        <p id="alertMessage"></p>
        <button onclick="closeAlert()">OK</button>
    </div>
</div>
    <!-- Include Navigation Bar -->
    <%- include('partials/navbar.ejs') %>




    <!-- Student Records Section -->
    <section class="container mx-auto p-6">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/studentFeeRecordsByID" class="bg-blue-500 text-white py-3 px-4 rounded-lg font-medium text-center hover:bg-blue-400 transition-shadow shadow-md hover:shadow-lg">
                Fee by ID
            </a>
            <a href="/feeByMonth" class="bg-blue-500 text-white py-3 px-4 rounded-lg font-medium text-center hover:bg-blue-400 transition-shadow shadow-md hover:shadow-lg">
                Fee by Month
            </a>
            <a href="/feeByAmount" class="bg-blue-500 text-white py-3 px-4 rounded-lg font-medium text-center hover:bg-blue-400 transition-shadow shadow-md hover:shadow-lg">
                Fee by Amount
            </a>
        </div>
    </section>

        <div class="mb-4">
            <label for="amount" class="block text-sm font-medium text-gray-700 mb-2">Enter Amount</label>
            <input type="number" id="amount" class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
        </div>

        <div class="flex justify-center">
            <button id="find" class="bg-green-500 text-white px-6 py-2 rounded-lg font-medium hover:bg-green-400 transition-shadow shadow-md hover:shadow-lg">
                Find
            </button>
        </div>
    </section>

    <section class="my-4">
        <table class="min-w-full border-collapse border border-gray-300">
            <thead>
                <tr class="bg-gray-100">
                    <th class="border px-4 py-2">Registration No</th>
                    <th class="border px-4 py-2">Name</th>
                    <th class="border px-4 py-2">Class</th>
                    <th class="border px-4 py-2">Amount</th>
                </tr>
            </thead>
            <tbody id="tableBody" class="bg-white"></tbody>
        </table>
    </section>
    

    <!-- Navbar script -->
    <script src="./script/navbar.js"></script>
    <script src="./script/feeByAmount.js"></script>
</body> 
</html>
