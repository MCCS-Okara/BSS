<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Records - Blooms School System</title>
    <link rel="stylesheet" href="/alert.css">
    <link rel="stylesheet" href="/output.css">
</head>
<body class="bg-gradient-to-b from-gray-50 to-gray-200 min-h-screen text-gray-800">

    <!-- Header -->
    <header class="bg-blue-600 text-white py-6 shadow-lg">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl md:text-4xl font-extrabold uppercase tracking-wide">
                Student Records
            </h1>
        </div>
    </header>

    <!-- Custom Alert Modal -->
    <div id="customAlert" class="custom-alert hidden">
        <div class="custom-alert-content">
            <p id="alertMessage"></p>
            <button onclick="closeAlert()">OK</button>
        </div>
      </div>

    <!-- Include Navigation Bar -->
    <%- include('partials/navbar.ejs') %>

    <!-- Student Records Section -->
    <section class="container mx-auto p-2">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/studentFeeRecordsByID" class="bg-blue-500 text-white py-4 px-6 rounded-lg font-medium text-center shadow-md hover:bg-blue-400 hover:shadow-lg transition">
                Fee by ID
            </a>
            <a href="/feeByMonth" class="bg-blue-500 text-white py-4 px-6 rounded-lg font-medium text-center shadow-md hover:bg-blue-400 hover:shadow-lg transition">
                Fee by Month
            </a>
            <a href="/feeByAmount" class="bg-blue-500 text-white py-4 px-6 rounded-lg font-medium text-center shadow-md hover:bg-blue-400 hover:shadow-lg transition">
                Fee by Amount
            </a>
        </div>
    </section>

    <!-- Input Section -->
    <section class="container mx-auto p-2">
        <div class="mb-2">
            <label for="months" class="block text-lg font-medium text-gray-700 mb-2">
                Enter Months
            </label>
            <input 
                type="number" 
                id="months" 
                class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 p-3"
                placeholder="Enter number of months"
            >
        </div>

        <div class="flex justify-center">
            <button 
                id="find" 
                class="bg-green-500 text-white px-8 py-3 rounded-lg font-medium hover:bg-green-400 hover:shadow-lg transition-shadow shadow-md">
                Find
            </button>
        </div>
    </section>

    <!-- Table Section -->
    <section class="container mx-auto my-2">
        <table class="table-auto w-full border-collapse border border-gray-300 rounded-lg shadow-md overflow-hidden">
            <thead>
                <tr class="bg-blue-100 text-blue-900">
                    <th class="border px-6 py-4 text-left font-semibold text-lg">Registration No</th>
                    <th class="border px-6 py-4 text-left font-semibold text-lg">Name</th>
                    <th class="border px-6 py-4 text-left font-semibold text-lg">Pending Fee Months</th>
                    <th class="border px-6 py-4 text-left font-semibold text-lg">Amount</th>
                </tr>
            </thead>
            <tbody id="tableBody" class="bg-white">
                <!-- Data will be dynamically inserted here -->
            </tbody>
        </table>
    </section>

    <!-- Navbar script -->
    <script src="./script/navbar.js"></script>
    <script src="./script/feeByMonth.js"></script>
</body>
</html>
