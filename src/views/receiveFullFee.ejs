<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receive Fee - Blooms School System</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/output.css"> <!-- Adjust path for public folder -->
    <link rel="stylesheet" href="/alert.css" />
    <style>
          table {
    table-layout: fixed; 
    width: 100%; 
  }

  td {
    width: 50%; 
    word-wrap: break-word; 
  }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 to-gray-100 text-gray-800 min-h-screen flex flex-col">

    <!-- Header -->
    <header class="bg-blue-700 text-shadow text-white  py-2 shadow-md">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-extrabold uppercase tracking-wide">
                Add Student Fee
            </h1>
        </div>
    </header>

    <!-- Include Navigation Bar -->
    <%- include('partials/navbar.ejs') %>

     <!-- Custom Alert Modal -->
  <div id="customAlert" class="custom-alert hidden">
    <div class="custom-alert-content">
        <p id="alertMessage"></p>
        <button onclick="closeAlert()">OK</button>
    </div>
</div>
<!-- loading spinner -->
<div id="loading" class="fixed inset-0 bg-gray-800 bg-opacity-50 items-center justify-center hidden">
    <div class="spinner-border animate-spin inline-block w-8 h-8 border-4 rounded-full text-white"></div>
</div>
<!--confirm alert -->

<div id="confirmAlert" class="hidden fixed inset-0 items-center justify-center z-50 backdrop-blur confirm-dialog ">
    <div class="relative px-4 min-h-screen md:flex md:items-center md:justify-center">
        <div class=" opacity-25 w-full h-full absolute z-10 inset-0"></div>
        <div class="bg-white rounded-lg md:max-w-md md:mx-auto p-4 fixed inset-x-0 bottom-0 z-50 mb-4 mx-4 md:relative shadow-lg">
            <div class="md:flex items-center">
                <div class="rounded-full border border-gray-300 flex items-center justify-center w-16 h-16 flex-shrink-0 mx-auto">
                <i class="bx bx-error text-3xl">
                &#9888;
                </i>
                </div>
                <div class="mt-4 md:mt-0 md:ml-6 text-center md:text-left">
                <p class="font-bold">Warning!</p>
                <p id="confirmAlertMessage" class="text-sm text-gray-700 mt-1">
                </p>
                </div>
            </div>
            <div class="text-center md:text-right mt-4 md:flex md:justify-end">
                <button id="confirm-delete-btn" class="block w-full md:inline-block md:w-auto px-4 py-3 md:py-2 bg-red-200 text-red-700 rounded-lg font-semibold text-sm md:ml-2 md:order-2">
                    Delete
                </button>
                <button id="confirm-cancel-btn" class="block w-full md:inline-block md:w-auto px-4 py-3 md:py-2 bg-gray-200 rounded-lg font-semibold text-sm mt-4 md:mt-0 md:order-1">
                Cancel
                </button>
            </div>
        </div>
    </div>
</div>

    <!-- Main Content -->
    <div class="container mx-auto my-6 px-4 lg:px-0">
        <h2 class="text-2xl lg:text-3xl font-bold text-center text-gray-800 mb-4">Enter Payment Details</h2>

        <!-- Flex Container for Form and Verification Box -->
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Left: Add Fee Form -->
            <div class="w-full lg:w-2/5 bg-white p-6 rounded-lg shadow-lg h-fit">
                <form id="fee-payment-form" >
                    <!-- Registration Number -->
                    <div class="mb-4">
                        <label for="registrationNo" class="block text-sm font-semibold text-gray-700 mb-2">Registration No:</label>
                        <input type="text" id="registrationNo" name="registrationNo" class="w-full border border-gray-300 rounded-md py-2 px-3 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter Registration No" required autocomplete="off">
                    </div>

                    <!-- Paid Fee Amount -->
                    <div class="mb-4">
                        <label for="paidFeeAmount" class="block text-sm font-semibold text-gray-700 mb-2">Paid Fee Amount:</label>
                        <input type="number" id="paidFeeAmount" name="paidFeeAmount" class="w-full border border-gray-300 rounded-md py-2 px-3 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Rs 0.00" required autocomplete="off">
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex justify-between items-center">
                        <button id="receiveFee" type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md shadow-lg transition-transform duration-200 transform hover:scale-105">
                            Receive Fee
                        </button>
                        <button type="button" id="deleteFee" class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-md shadow-lg transition-transform duration-200 transform hover:scale-105">
                            Unreceive
                        </button>
                    </div>
                </form>
            </div>


            <!-- Right: Student Verification -->
            <div id="studentVerification" class="w-full lg:w-3/5 bg-white p-8 rounded-lg shadow-lg">
                <h3 class="text-xl font-bold text-gray-800 mb-6">Student Information</h3>
                <!-- Dynamically populate content here -->
                <table class="w-full border-collapse border border-gray-300">
                    <tr>
                        <td class="border border-gray-300 px-4 py-2">Registration No</td>
                        <td id="verifyRegistrationNo" class="border border-gray-300 px-4 py-2"></td>
                    </tr>
                    <tr>
                        <td  class="border border-gray-300 px-4 py-2">Name</td>
                        <td id="verifyName" class="border border-gray-300 px-4 py-2"></td>
                    </tr>
                    <tr>
                        <td  class="border border-gray-300 px-4 py-2">Father's Name</td>
                        <td id="verifyFatherName" class="border border-gray-300 px-4 py-2"></td>
                    </tr>
                    <tr>
                        <td class="border border-gray-300 px-4 py-2">Class Name</td>
                        <td id="verifyClassName" class="border border-gray-300 px-4 py-2"></td>
                    </tr>
                    <tr>
                        <td  class="border border-gray-300 px-4 py-2">Status</td>
                        <td id="verifyStatus" class="border border-gray-300 px-4 py-2"> </td>
                    </tr>
                    <tr>
                        <td  class="border border-gray-300 px-4 py-2">Pending Fee</td>
                        <td id="verifyPendingFee" class="border border-gray-300 px-4 py-2"> </td>
                    </tr>
                    <tr>
                        <td  class="border border-gray-300 px-4 py-2">Paid Fee Amount</td>
                        <td id="verifypaidFeeAmount" class="border border-gray-300 px-4 py-2"></td>
                    </tr>
                </table>
                <div class="text-center mt-4">
                    <button id="verify" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md shadow-md transition transform duration-200 hover:scale-105">
                        Verify
                    </button>
                </div>
            </div>
        </div>

<!-- all sumited fees records-->
<div class="mt-8">
    <h3 class="text-2xl font-bold mb-6 text-center text-blue-600">Fees Collected</h3>
    <table class="table-auto w-full border-collapse border border-gray-400 rounded-lg shadow-lg">
        <thead class="bg-gradient-to-r from-blue-500 to-blue-700 text-white text-lg">
            <tr>
                <th class="border border-gray-300 px-6 py-3 text-center">Registration No</th>
                <th class="border border-gray-300 px-6 py-3 text-center">Name</th>
                <th class="border border-gray-300 px-6 py-3 text-center">Class</th>
                <th class="border border-gray-300 px-6 py-3 text-center">Paid Fee Amount</th>
                <th class="border border-gray-300 px-6 py-3 text-center">Delete</th>
            </tr>
        </thead>
        <tbody id="feeTableBody" class="bg-white text-gray-800 text-center"></tbody>
    </table>
    <div class="text-right mt-6">
        <button id="submitAllFees" class="bg-gradient-to-r from-green-500 to-green-700 hover:from-green-600 hover:to-green-800 text-white py-3 px-6 rounded-md shadow-lg font-semibold transition-all duration-300">
            Submit All
        </button>
    </div>
</div>





<div id="allReceivedFeeses">

</div>

    </div>



    <!-- Scripts -->
    <script src="./script/charges.js"></script>
    <script src="./script/navbar.js"></script>
</body>
</html>
